<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Register Payment wizard additions -->
  <record id="view_account_payment_register_form_inherit_extra" model="ir.ui.view">
    <field name="name">account.payment.register.form.inherit.extra.fields</field>
    <field name="model">account.payment.register</field>
    <field name="inherit_id" ref="account.view_account_payment_register_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[2]" position="after">
        <group string="Instrument Info"
               modifiers='{"invisible": [["x_show_instrument", "=", false]]}'>
          <field name="x_instrument_date"/>
          <field name="x_instrument_number"/>
        </group>
        <group string="Cheque Details"
               modifiers='{"invisible": [["x_show_cheque", "=", false]]}'>
          <field name="x_cheque_no"/>
          <field name="x_cheque_date"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- Account Payment form additions (Option B: separate inner group after right column) -->
  <record id="view_account_payment_form_inherit_extra" model="ir.ui.view">
    <field name="name">account.payment.form.inherit.extra.fields</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <!-- Append a new inner group after the RIGHT column (group[2]) -->
      <xpath expr="//sheet/group/group[2]" position="after">
        <group col="2">
          <group string="Instrument Info"
                 modifiers='{"invisible": [["x_show_instrument", "=", false]]}'>
            <field name="x_instrument_date"/>
            <field name="x_instrument_number"/>
          </group>
          <group string="Cheque Details"
                 modifiers='{"invisible": [["x_show_cheque", "=", false]]}'>
            <field name="x_cheque_no"/>
            <field name="x_cheque_date"/>
          </group>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
