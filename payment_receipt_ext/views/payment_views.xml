<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Register Payment wizard additions -->
  <record id="view_account_payment_register_form_inherit_extra" model="ir.ui.view">
    <field name="name">account.payment.register.form.inherit.extra.fields</field>
    <field name="model">account.payment.register</field>
    <field name="inherit_id" ref="account.view_account_payment_register_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_line_id']" position="after">
        <group string="Instrument Info"
               modifiers='{"invisible": [["journal_id.type", "not in", ["bank", "cash"]]]}'>
          <field name="x_instrument_date"/>
          <field name="x_instrument_number"/>
        </group>
        <group string="Cheque Details"
               modifiers='{"invisible": ["|", ["journal_id.type","not in",["bank","cash"]], ["payment_method_line_id.x_line_kind","!=","cheque"]]}'>
          <field name="x_cheque_no"/>
          <field name="x_cheque_date"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- Account Payment form additions -->
  <record id="view_account_payment_form_inherit_extra" model="ir.ui.view">
    <field name="name">account.payment.form.inherit.extra.fields</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_line_id']" position="after">
        <group string="Instrument Info"
               modifiers='{"invisible": [["journal_id.type", "not in", ["bank", "cash"]]]}'>
          <field name="x_instrument_date"/>
          <field name="x_instrument_number"/>
        </group>
        <group string="Cheque Details"
               modifiers='{"invisible": ["|", ["journal_id.type","not in",["bank","cash"]], ["payment_method_line_id.x_line_kind","!=","cheque"]]}'>
          <field name="x_cheque_no"/>
          <field name="x_cheque_date"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- Journal form: show Kind column on inbound/outbound payment method lines -->
  <record id="view_account_journal_form_inherit_kind_column" model="ir.ui.view">
    <field name="name">account.journal.form.inherit.kind.column</field>
    <field name="model">account.journal</field>
    <field name="inherit_id" ref="account.view_account_journal_form"/>
    <field name="arch" type="xml">
      <!-- Incoming methods list -->
      <xpath expr="//page[@name='page_incoming_payments']//field[@name='inbound_payment_method_line_ids']/list/field[@name='name']" position="after">
        <field name="x_line_kind"/>
      </xpath>
      <!-- Outgoing methods list -->
      <xpath expr="//page[@name='page_outgoing_payments']//field[@name='outbound_payment_method_line_ids']/list/field[@name='name']" position="after">
        <field name="x_line_kind"/>
      </xpath>
    </field>
  </record>
</odoo>